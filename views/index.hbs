{{#if shortURL}}
 <div class="result">
    <h3>Success! Please use the link:</h3>
    <p id="generatedURL">{{origin}}/{{shortURL}}</p>
 </div>
<button class="copy" onclick="copy()">Copy</button>
<a  class="home" href="http://localhost:3000/">back to home</button>
<script>
    function copy() {
        const URL = document.getElementById("generatedURL")
        navigator.clipboard.writeText(URL.innerText)
        .then(() => alert ("已複製短網址!!"))
        .catch(error => console.log(error))
    }

</script>
{{else}}
    <form action="/" method="POST">
        <div class="container">
            <input type="url" name="url" placeholder="Input URL here" required />
            <button class="shorten" type="submit">Shorten</button>
        </div>
    </form>
{{/if}}